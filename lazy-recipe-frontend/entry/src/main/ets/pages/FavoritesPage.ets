          await this.performClearAll();
        }
      }
    });
  }

  // ÊâßË°åÊ∏ÖÁ©∫Êìç‰Ωú
  private async performClearAll() {
    const backupRecipes = [...this.recipes];

    try {
      // ‰πêËßÇÊõ¥Êñ∞ÔºöÁ´ãÂç≥Ê∏ÖÁ©∫ÂàóË°®
      this.recipes = [];

      // Ë∞ÉÁî®ÂêéÁ´Ø API ÊâπÈáèÂèñÊ∂àÊî∂Ëóè
      const promises = backupRecipes.map(r => ApiService.updateFavorite(r.id));
      await Promise.all(promises);

      promptAction.showToast({
        message: 'Â∑≤Ê∏ÖÁ©∫Êî∂ËóèÂ§π',
        duration: 2000
      });

    } catch (error) {
      console.error('Ê∏ÖÁ©∫Êî∂ËóèÂ§±Ë¥•:', error);

      // Â§±Ë¥•Êó∂ÊÅ¢Â§ç
      this.recipes = backupRecipes;

      promptAction.showToast({
        message: 'Ê∏ÖÁ©∫Â§±Ë¥•ÔºåËØ∑ÈáçËØï',
        duration: 2000
      });
    }
  }

